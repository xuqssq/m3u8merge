{
  "name": "m3u8merge",
  "version": "2.0.4",
  "description": "A powerful and lightweight SDK for merging M3U8 playlist streams into complete video files. Supports HLS stream parsing, segment downloading, and seamless video concatenation with progress tracking.",
  "keywords": [
    "m3u8",
    "hls",
    "video-merge",
    "stream-download",
    "playlist",
    "video-processing",
    "ffmpeg",
    "streaming",
    "video-converter",
    "ts-segments",
    "live-stream",
    "video-downloader",
    "media-processing",
    "http-live-streaming",
    "segment-merger",
    "video-concatenation",
    "stream-parser",
    "media-downloader"
  ],
  "author": "Qian <xuqssq@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/xuqssq/m3u8merge.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "m3u8merge": "scripts/get_video.mjs"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "node --watch-path=src dist/index.cjs",
    "api": "node scripts/api-server.mjs",
    "api:dev": "nodemon scripts/api-server.mjs",
    "release": "nrm use npm && npm publish",
    "build": "unbuild",
    "build:dev": "unbuild --stub --watch",
    "m3u8merge": "node scripts/get_video.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "nodemon": "^3.0.0",
    "nrm": "^1.2.6",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-spawn": "^7.0.6",
    "express": "^4.18.0",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5",
    "node-fetch": "^2.7.0",
    "node-persist": "^4.0.1",
    "p-limit": "^6.2.0",
    "path": "^0.12.7",
    "process": "^0.11.10",
    "stream": "^0.0.3",
    "undici": "^7.11.0",
    "uuid": "^9.0.0"
  }
}
